
@{
    ViewBag.Title = "Index";
}

<h2>Find Greates Number</h2>

@using (Html.BeginForm("Index", "GreatestNumber", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.Label("First Number", htmlAttributes: new { @class = "form-label" })
        @Html.TextBox("FirstNumber", 0, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Second Number", htmlAttributes: new { @class = "form-label" })
        @Html.TextBox("SecondNumber", 0, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Third Number", htmlAttributes: new { @class = "form-label"})
        @Html.TextBox("ThirdNumber", 0, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Submit</button>
        <button type="reset" class="btn btn-default">Reset</button>
    </div>
}

<h2>
    @if(ViewBag.MaxNumber != null)
    {
        
         <p>Max Number is @ViewBag.MaxNumber</p>
    }       
   
</h2>




