@model IEnumerable<BookStoreApplication.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">                
                <img src="/Store/RetrieveImage/@item.ID" alt="" class="img img-responsive"/>
                <div class="caption">
                    <h3>@item.Title</h3>
                    <p>@item.Author.Name</p>
                    <p>@item.Genre.Name</p>
                    <p>@item.Description</p>
                    <p><a href="#" class="btn btn-primary" role="button">Add To Cart</a>                     
                </div>
                <div class="toolBox">
                    <a href="#" class="btn btn-default" role="button">Edit</a>
                    <a href="#" class="btn btn-default" role="button">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

